{
    "manifest_version": 3,
    "name": "UMICH Lecture Tools ",
    "description": "Simple additions to add functionality to the UMICH lecture viewer",
    "version": "0.0.1",
    "icons": {
      "16": "./icons/16.png",
      "32": "./icons/32.png",
      "48": "./icons/48.png",
      "128": "./icons/128.png"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
        {
          "matches": ["https://leccap.engin.umich.edu/leccap/player/r/*"],
          "js": ["content.js"]
        }
      ],
      "permissions": ["activeTab"]
      
  }